{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "sourceMap": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "declaration": false,
    "composite": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@config/*": ["./config/*"],
      "@resolvers/*": ["./resolvers/*"],
      "@_types/*": ["./types/*"],
      "@errors/*": ["./errors/*"],
      "@lib/*": ["./lib/*"],
      "@models/*": ["./models/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@dao/*": ["./dao/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}